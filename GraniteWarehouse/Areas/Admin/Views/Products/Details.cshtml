@model GraniteWarehouse.Models.ViewModels.ProductViewModels
@using GraniteWarehouse.Extensions


<br />
<h2 class="text-info">Product Details</h2>


    <div class="p-4 border rounded row">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div col="8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" class="form-control" />
                </div>
                
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
                
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>

            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" class="form-control"/>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.SpecialTags"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.SpecialTags.Name" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShaderColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ShaderColor" class="form-control" />
                </div>
                
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Products.Available" class="form-control" />
                </div>
                
            </div>

        </div>

        <div class="col-1">

        </div>

        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
        </div>

        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route="@Model.Products.Id"  class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>


